@model InsectCatalog.Models.Insect
@{
    ViewBag.Title = "Home";
}
<div class="row">
    <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
        <img src="@ViewBag.Image" />
    </div>
    <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
        <h3><em>@Model.Genus @Model.Species</em></h3>
        <span class="attribution">Photo by <em>@Model.Images.First().Photographer.FirstName @Model.Images.First().Photographer.LastName</em></span>
        <p class="caption">@Model.Images.First().Caption</p>
        <div class="main-nav">
            <h4>Browse By</h4>
            <ul>
                <li><a href="#"><span>Family</span></a></li>
                <li><a href="#"><span>Tribe</span></a></li>
                <li><a href="#"><span>Genus</span></a></li>
                <li><a href="#"><span>Species</span></a></li>
            </ul>
        </div>
    </div>
</div>